<?xml version="1.0"?>
    <listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
        <item name="provider" xsi:type="string">nttdata_grid_index_list.nttdata_grid_index_list_data_source</item>
        <item name="deps" xsi:type="string">nttdata_grid_index_list.nttdata_grid_index_list_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">employees</item> <!-- NOTE: name de table de database -->
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Add</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">nttdata_grid/employees/add</item> <!-- NOTE: module/controller/action-->
            </item>
        </item>
    </argument>
    <dataSource name="nttdata_grid_index_list_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
        <argument name="class" xsi:type="string">
            NttData\Grid\Ui\DataProvider\GridDataProvider
        </argument>
        <argument name="name" xsi:type="string">nttdata_grid_index_list_data_source</argument>
        <argument name="primaryFieldName" xsi:type="string">id</argument>
        <argument name="requestFieldName" xsi:type="string">id</argument>
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
            <item name="update_url" xsi:type="url" path="mui/index/render"/>
            </item>
        </argument>
        </argument>
        <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
        </item>
        </argument>
    </dataSource>
    <container name="listing_top">
        <argument name="data" xsi:type="array">
        <item name="config" xsi:type="array">
            <item name="template" xsi:type="string">ui/grid/toolbar</item>
            <item name="stickyTmpl" xsi:type="string">ui/grid/sticky/toolbar</item>
        </item>
        </argument>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
            <item name="storageConfig" xsi:type="array">
                <item name="indexField" xsi:type="string">id</item>
                <item name="provider" xsi:type="string">
                nttdata_grid_index_list.nttdata_grid_index_list.listing_top.bookmarks
                </item>
                <item name="namespace" xsi:type="string">current.filters</item>
            </item>
            <item name="childDefaults" xsi:type="array">
                <item name="provider" xsi:type="string">
                nttdata_grid_index_list.nttdata_grid_index_list.listing_top.listing_filters
                </item>
                <item name="imports" xsi:type="array">
                <item name="visible" xsi:type="string">
                    nttdata_grid_index_list.nttdata_grid_index_list.nttdata_grid_index_list_columns.${ $.index }:visible
                </item>
                </item>
            </item>
            </item>
        </argument>
        </filters>
        <massaction name="listing_massaction">
            <argument name="data" xsi:type="array">
                <item name="data" xsi:type="array">
                <item name="selectProvider" xsi:type="string">nttdata_grid_index_list.nttdata_grid_index_list.nttdata_grid_index_list_columns.ids</item>
                <item name="displayArea" xsi:type="string">bottom</item>
                <item name="indexField" xsi:type="string">id_employees</item>
                </item>
            </argument>

            <!-- ANCHOR: config mass action delete employees -->
            <action name="delete">
                <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="type" xsi:type="string">delete</item>
                    <item name="label" xsi:type="string" translate="true">Delete</item>
                    <item name="url" xsi:type="url" path="nttdata_grid/employees/massDelete"/>
                    <item name="confirm" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Delete Employees?</item>
                        <item name="message" xsi:type="string" translate="true">Are you sure you want to delete the selected employees?</item>
                    </item>
                </item>
                </argument>
            </action>

            <!-- FIXME: config mass action average age employees -->
            <action name="average">
                <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="type" xsi:type="string">average</item>
                    <item name="label" xsi:type="string" translate="true">Average age</item>
                    <item name="url" xsi:type="url" path="nttdata_grid/employees/massaverageage"/>
                    <item name="alert" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Average age Employees</item>
                        <item name="message" xsi:type="string" translate="true"><!-- FIXME: controller data??? --></item>
                    </item>
                </item>
                </argument>
            </action>
        </massaction>
        <paging name="listing_paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                <item name="storageConfig" xsi:type="array">
                    <item name="provider" xsi:type="string">
                    nttdata_grid_index_list.nttdata_grid_index_list.listing_top.bookmarks
                    </item>
                    <item name="namespace" xsi:type="string">current.paging</item>
                </item>
                <item name="selectProvider" xsi:type="string">
                    nttdata_grid_index_list.nttdata_grid_index_list.nttdata_grid_index_list_columns.ids
                </item>
                </item>
            </argument>
        </paging>
    </container>
    <columns name="employees"> <!-- NOTE: use the same name as the table-->
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">id_employees</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="id_employees"> <!-- NOTE: use the same column name-->
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="filter" xsi:type="string">text</item>
                <item name="label" xsi:type="string" translate="true">ID</item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
        </argument>
        </column>
        <column name="emes_name">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="filter" xsi:type="string">text</item>
                <item name="label" xsi:type="string" translate="true">Name</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        </column>
        <column name="emes_surname">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="filter" xsi:type="string">text</item>
                <item name="label" xsi:type="string" translate="true">Surname</item>
                <item name="sortOrder" xsi:type="number">30</item>
            </item>
        </argument>
        </column>
        <column name="emes_age">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="filter" xsi:type="string">text</item>
                <item name="label" xsi:type="string">Age</item>
                <item name="sortOrder" xsi:type="number">40</item>
            </item>
        </argument>
        </column>
        <column name="emes_typeEmployees">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="filter" xsi:type="string">text</item>
                <item name="label" xsi:type="string">Type employees</item>
                <item name="sortOrder" xsi:type="number">60</item>
            </item>
        </argument>
        </column>
        <column name="emes_typeDesigner" class="NttData\Grid\Ui\Component\Listing\Column\DesignerAction">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="filter" xsi:type="string">text</item>
                <item name="label" xsi:type="string">Type designer</item>
                <item name="sortOrder" xsi:type="number">80</item>
                <item name="default" xsi:type="string">0</item> 
            </item>
        </argument>
        </column>
        <column name="emes_typeProgrammer" class="NttData\Grid\Ui\Component\Listing\Column\ProgrammerAction">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="filter" xsi:type="string">text</item>
                <item name="label" xsi:type="string">Type programmer</item>
                <item name="sortOrder" xsi:type="number">90</item>
                <item name="default" xsi:type="string">0</item> 
            </item>
        </argument>
        </column>
        <column name="emes_aggregate">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="filter" xsi:type="string">text</item>
                <item name="label" xsi:type="string">Aggregate</item>
                <item name="sortOrder" xsi:type="number">100</item>
            </item>
        </argument>
        </column>
        <column name="emes_update">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="filter" xsi:type="string">text</item>
                <item name="label" xsi:type="string">Update</item>
                <item name="sortOrder" xsi:type="number">110</item>
            </item>
        </argument>
        </column>

        <!-- ANCHOR Add Action with each row of grid and for this we will create a class Action -->

        <actionsColumn class="NttData\Grid\Ui\Component\Listing\Column\Actions" name="actions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">id</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
    </listing>